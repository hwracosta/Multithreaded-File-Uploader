<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.multithreadedfileuploader.ui.MainView">
    <children>
        <VBox spacing="15.0" layoutX="20.0" layoutY="20.0" prefWidth="560.0">
            <!-- Title -->
            <Label text="Multithreaded File Uploader" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- File Selection -->
            <HBox spacing="10.0">
                <Button fx:id="selectFileButton" text="Select File" />
                <Label fx:id="filePathLabel" text="No file selected" style="-fx-text-fill: gray;" />
            </HBox>

            <!-- Progress Bar -->
            <VBox spacing="5.0">
                <ProgressBar fx:id="uploadProgressBar" prefWidth="500.0" progress="0.0" />
                <Label fx:id="progressLabel" text="Progress: 0%" style="-fx-text-fill: gray;" />
            </VBox>

            <!-- Buttons -->
            <HBox spacing="10.0">
                <Button fx:id="startUploadButton" text="Start Upload" />
                <Button fx:id="cancelUploadButton" text="Cancel Upload" style="-fx-background-color: #ff4c4c; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
