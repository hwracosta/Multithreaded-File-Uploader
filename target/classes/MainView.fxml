<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.multithreadedfileuploader.ui.MainView">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefWidth="760.0" spacing="15.0">
            <!-- Title -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Multithreaded File Uploader" />

            <!-- File Selection -->
            <HBox spacing="10.0">
                <Button fx:id="selectFileButton" text="Select File" />
            </HBox>

            <!-- Upload Sections Container -->
            <VBox fx:id="uploadContainer" spacing="15.0" prefHeight="500.0" prefWidth="760.0" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 10;">
                <!-- Default upload section -->
                <VBox fx:id="defaultUploadSection" spacing="10.0" style="-fx-border-color: lightgray; -fx-border-radius: 5; -fx-padding: 10; -fx-background-color: #f9f9f9;">
                    <Label fx:id="filePathLabel" style="-fx-font-size: 14px; -fx-text-fill: grey;" text="No file selected" />
                    <ProgressBar fx:id="uploadProgressBar" prefWidth="500.0" progress="0.0" style="-fx-accent: #007bff;" />
                    <Label fx:id="progressLabel" style="-fx-font-size: 12px; -fx-text-fill: grey;" text="Progress: 0%" />
                    <HBox spacing="10.0">
                        <Button fx:id="startUploadButton" text="Start Upload" style="-fx-background-color: #007bff; -fx-text-fill: white;" />
                        <Button fx:id="pauseUploadButton" text="Pause Upload" style="-fx-background-color: #ffcc00; -fx-text-fill: black;" />
                        <Button fx:id="resumeUploadButton" text="Resume Upload" style="-fx-background-color: #4caf50; -fx-text-fill: white;" />
                        <Button fx:id="cancelUploadButton" text="Cancel Upload" style="-fx-background-color: #ff4c4c; -fx-text-fill: white;" />
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
