<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="196.0" prefWidth="580.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.multithreadedfileuploader.ui.MainView">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefWidth="560.0" spacing="15.0">
            <!-- Title -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Multithreaded File Uploader" />

            <!-- File Selection -->
            <HBox spacing="10.0">
                <Button fx:id="selectFileButton" text="Select File" />
                <Label fx:id="filePathLabel" style="-fx-text-fill: grey;" text="No file selected" />
            </HBox>

            <!-- Progress Bar -->
            <VBox spacing="5.0">
                <ProgressBar fx:id="uploadProgressBar" prefWidth="500.0" progress="0.0" />
                <Label fx:id="progressLabel" style="-fx-text-fill: grey;" text="Progress: 0%" />
            </VBox>

            <!-- Buttons -->
            <HBox spacing="10.0">
                <Button fx:id="startUploadButton" text="Start Upload" />
                <Button fx:id="pauseUploadButton" style="-fx-background-color: #ffcc00; -fx-text-fill: black;" text="Pause Upload" />
                <Button fx:id="resumeUploadButton" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Resume Upload" />
                <Button fx:id="cancelUploadButton" style="-fx-background-color: #ff4c4c; -fx-text-fill: white;" text="Cancel Upload" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
