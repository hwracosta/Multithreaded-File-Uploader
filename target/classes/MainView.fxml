<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650.0" prefWidth="850.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.multithreadedfileuploader.ui.MainView">
    <children>
        <!-- Main VBox for Layout -->
        <VBox layoutX="0.0" layoutY="0.0" prefWidth="810.0" spacing="20.0" alignment="CENTER"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
            <!-- Title Label -->
            <Label style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-alignment: center;" text="File Rush" />

            <!-- File Selection -->
            <HBox spacing="10.0" alignment="center">
                <Button fx:id="selectFileButton" text="Select File" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
            </HBox>

            <!-- Upload Section Container (Centered on screen) -->
            <VBox fx:id="uploadContainer" spacing="20.0" prefHeight="500.0" prefWidth="810.0" style="-fx-border-color: #bdbbbb; -fx-border-width: 1; -fx-padding: 20; -fx-background-color: #f9f9f9;" alignment="CENTER">
                <!-- Default upload section -->
                <VBox fx:id="defaultUploadSection" spacing="20.0" style="-fx-border-color: lightgray; -fx-border-radius: 10; -fx-padding: 15; -fx-background-color: #fff;" alignment="CENTER">
                    <Label fx:id="filePathLabel" style="-fx-font-size: 16px; -fx-text-fill: #0c0c0c;" text="No file selected" />
                    <ProgressBar fx:id="uploadProgressBar" prefWidth="750.0" progress="0.0" style="-fx-accent: #24c412;" />
                    <Label fx:id="progressLabel" style="-fx-font-size: 14px; -fx-text-fill: grey;" text="Progress: 0%" />

                    <!-- Buttons for upload actions -->
                    <HBox spacing="20.0" alignment="center">
                        <Button fx:id="startUploadButton" text="Start Upload" style="-fx-background-color: #24c412; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
                        <Button fx:id="pauseUploadButton" text="Pause Upload" style="-fx-background-color: #f35c1c; -fx-text-fill: #f8f6f6; -fx-padding: 10px 20px;"/>
                        <Button fx:id="resumeUploadButton" text="Resume Upload" style="-fx-background-color: #e5ad21; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
                        <Button fx:id="cancelUploadButton" text="Cancel Upload" style="-fx-background-color: #cc1f1f; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
